@model IndexVM
@{
    ViewBag.Title = "ITPanelEnvanter";
}

<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-3.6.0.min.js"></script>
<script language="JavaScript" type="text/javascript" src="~/Scripts/jquery-ui-1.13.2.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<style>
    html {
        overflow-y: scroll;
    }

    body {
        position: relative;
        min-height: 100vh;
        width: 100%;
        overflow-x: hidden;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 65px;
        background: #11101d;
        padding: 6px 12px;
        transition: all 0.5s ease;
    }

        .sidebar.active {
            width: 240px
        }

        .sidebar .logo_content .logo {
            color: #fff;
            display: flex;
            height: 50px;
            width: 100%;
            align-items: center;
            opacity: 0;
            pointer-events: none;
            transition: all 0.5s ease;
        }

        .sidebar.active .logo_content .logo {
            opacity: 1;
            pointer-events: none;
        }

    .logo_content .logo i {
        font-size: 28px;
        margin-right: 10px;
    }

    .logo_content .logo .logo_name {
        font-size: 20px;
        font-weight: 400;
    }

    .sidebar #btn {
        position: absolute;
        color: #fff;
        left: 44%;
        top: 6px;
        font-size: 20px;
        height: 50px;
        width: 50px;
        text-align: center;
        line-height: 50px;
        transform: translateX(-50%);
    }

    .sidebar.active #btn {
        left: 90%;
    }

    .sidebar ul {
        margin-top: 20px;
    }

        .sidebar ul li {
            position: relative;
            height: 50px;
            width: 100%;
            margin: 0 -40px 10px;
            list-style: none;
            line-height: 50px;
        }

            .sidebar ul li a {
                color: #fff;
                display: flex;
                align-items: center;
                text-decoration: none;
                width: 550%;
                transition: all 0.4s ease;
                border-radius: 12px;
                white-space: nowrap;
            }

                .sidebar ul li a:hover {
                    color: #11101d;
                    background: #fff;
                }

    .sidebar_ul_li_a {
        color: #fff;
        display: flex;
        align-items: center;
        text-decoration: none;
        width: 550%;
        transition: all 0.4s ease;
        border-radius: 12px;
        white-space: nowrap;
    }

        .sidebar_ul_li_a:hover {
            color: #11101d;
            background: #fff;
        }

    .sidebar ul li i {
        height: 50px;
        min-width: 50px;
        border-radius: 12px;
        line-height: 50px;
        text-align: center;
    }

    .sidebar_ul_li_i {
        height: 50px;
        min-width: 50px;
        border-radius: 12px;
        line-height: 50px;
        text-align: center;
    }

    .sidebar .links_name {
        opacity: 0;
        pointer-events: none;
        transition: all 0.5s ease;
    }

    .sidebar.active .links_name {
        opacity: 1;
        pointer-events: auto;
    }

    .sidebar .profile_content {
        position: absolute;
        color: #fff;
        bottom: 0;
        left: 0;
        width: 100%;
    }

        .sidebar .profile_content .profile {
            position: relative;
            padding: 10px 6px;
            height: 80px;
            background-color: #1d1b31;
            transition: all 0.5s ease;
        }

    .sidebar.active .profile_content .profile {
        background: none;
    }

    .profile_content .profile .profile_details {
        display: flex;
        align-items: center;
        opacity: 0;
        pointer-events: auto;
        transition: all 0.5s ease;
        white-space: nowrap;
    }

    .sidebar.active .profile .profile_details {
        opacity: 1;
        pointer-events: auto;
        white-space: nowrap;
    }

    .profile .profile_details .name_job {
        margin-left: 10px;
    }

    .profile .profile_details .name {
        font-size: 15px;
        font-weight: 400;
    }

    .profile .profile_details .job {
        font-size: 12px;
    }

    .profile #log_out {
        position: absolute;
        bottom: 39px;
        left: 50%;
        transform: translateX(-50%);
        padding-left: 5px;
        min-width: 35px;
        line-height: 30px;
        font-size: 20px;
        border-radius: 8px;
        transition: all 0.5s ease;
        background: #1d1b31;
    }

    .sidebar.active .profile #log_out {
        left: 83%;
    }

    .profile #log_out:hover {
        background-color: #808080;
        transition: all 0.4s ease;
    }

    .home_content {
        zoom: 90%;
        position: absolute;
        height: 100%;
        width: calc(100%-120px);
        left: 120px;
        transition: all 0.5s ease;
    }

        .home_content .text {
            font-size: 25px;
            font-weight: 500;
            color: #1d1b31;
            margin: 12px;
        }

    .sidebar.active ~ .home_content {
        width: calc(100%-340px);
        left: 340px;
    }

    .horizontal-line {
        display: inline-block
    }

    .interaction-bar {
        margin-top: 20px;
        border-radius: 10px;
        background-color: #E7E9EB;
    }

    table {
        display: block;
        overflow-x: auto;
        white-space: nowrap
    }

    select{
        width:200px !important;
    }

    th {
        border-right: 1px solid grey;
        color: black;
    }

    .table {
        padding-top: 20px;
    }

    .custom-alert{

        position:fixed;
        align-items:center;
        justify-content:center;

    }

    input{
        max-width: 200px;
    }


</style>

@using (Html.BeginForm(null, null, FormMethod.Post))
{

    <div class="sidebar">
        <div class="logo_content">
            <div class="logo">
                <i class='bx bxl-codepen'></i>
                <div class="logo_name">CAVO</div>
            </div>
            <i class='bx bx-menu' id="btn"></i>
        </div>
        <ul class="nav_list">
            @*<li>
                <a href="#">
                    <i class='bx bx-grid-alt'></i>
                    <span class="links_name">Dashboard</span>
                </a>
            </li>*@
            <li>
                <a href="ITPanelEnvanter">
                    <i class='bx bx-user'></i>
                    <span class="links_name">Envanter</span>
                </a>
            </li>
            <li>
                <a href="ITPanelHareketler">
                    <i class='bx bx-transfer'></i>
                    <span class="links_name">Hareketler</span>
                </a>
            </li>
            @*<li>
                <a href="#">
                    <i class='bx bxl-xing'></i>
                    <span class="links_name">İlişkiler</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-folder'></i>
                    <span class="links_name">Ek Belgeler</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-wrench'></i>
                    <span class="links_name">Onarım</span>
                </a>
            </li>*@
        </ul>
        <div class="profile_content">
            <div class="profile">
                <div class="profile_details">
                    <div class="name_job">
                        <div class="name">
                            @if (@Session["LoggedPersonelName"] == null)
                            {

                            }
                            else
                            {
                                @Session["LoggedPersonelName"].ToString()
                            }
                        </div>
                        <div class="job">
                            @if (@Session["LoggedPersonelPosition"] == null)
                            {

                            }
                            else
                            {
                                @Session["LoggedPersonelPosition"].ToString()
                            }
                        </div>
                    </div>
                </div>
                <a href="/Home/Login">
                    <i class='bx bx-log-out' id="log_out"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="home_content container">
        <div>
            <h1>
                <img src="~/img/gift.png" style="max-width: 50px" />
                Personel Envanter Yönetimi
            </h1>
        </div>
        <div>
            <div class="horizontal-line">
                Zimmet Tipi
                <select onchange="selectedzimmetvalue()" name="zimmettipi" id="zimmettipi" class="form-control">
                    <option value=""></option>
                    @foreach (ZimmetTip item in Model.ZimmetTipleri)
                    {
                        <option value="@item.ID">@item.ZimmetTipi - @item.Aciklama</option>
                    }
                </select>
            </div>
            <div class="horizontal-line">
                Firma
                <input type="text" name="firma" id="firma" class="form-control" />
            </div>
            <div class="horizontal-line">
                Demirbaş No
                <input type="text" name="demirbas" id="demirbas" class="form-control" />
            </div>
            <div class="horizontal-line">
                Açıklama
                <input type="text" name="aciklama" id="aciklama" class="form-control" />
            </div>
            <div class="horizontal-line">
                Sicil No
                <input type="text" name="sicilno" id="sicilno" class="form-control" />
            </div>
            <div class="horizontal-line">
                Personel
                <input type="text" name="personel" id="personel" class="form-control" />
            </div>
            <div class="horizontal-line">
                Seri No
                <input type="text" name="serino" id="serino" class="form-control" />
            </div>
            <div class="horizontal-line">
                CPU
                <input type="text" name="cpu" id="cpu" class="form-control" />
            </div>
            <div class="horizontal-line">
                Marka/Model
                <input type="text" name="markamodel" id="markamodel" class="form-control" />
            </div>
            <div class="horizontal-line">
                Disk Tipi
                <input type="text" name="disktipi" id="disktipi" class="form-control" />
            </div>
            <div class="horizontal-line">
                Disk Kapasitesi
                <input type="text" name="diskkapasitesi" id="diskkapasitesi" class="form-control" />
            </div>
            <div class="horizontal-line">
                RAM Slot
                <input type="text" name="ramslot" id="ramslot" class="form-control" />
            </div>
            <div class="horizontal-line">
                RAM
                <input type="text" name="ram" id="ram" class="form-control" />
            </div>
            <div class="horizontal-line">
                Ekran
                <input type="text" name="ekran" id="ekran" class="form-control" />
            </div>
            <div class="horizontal-line">
                <label>Zimmet Durumu</label>
                <select onchange="selectedvalue()" name="zimmetdurumu" id="zimmetdurumu" class="form-control">
                    <option value=""></option>
                    <option value="ZimmetPlanlandi">Zimmet Planlandı</option>
                    <option value="Zimmetlendi">Zimmetlendi</option>
                    <option value="IadeEdildi">İade Edildi</option>
                    <option value="HurdayaCikti">Hurdaya Çıktı</option>
                    <option value="Kayboldu">Kayboldu</option>
                    <option value="Calindi">Çalındı</option>
                    <option value="Satildi">Satıldı</option>
                    <option value="BilgiIslem">Bilgi İşlem</option>
                    <option value="Boşta">Boşta</option>
                </select>
            </div>
        </div>
        <div class="interaction-bar">
            <button class="btn"><img src="~/img/loupe.png" style="max-width: 30px; display: inline-block" /></button>
            <button type="button" data-toggle="ajax-modal" data-target="#addItem" data-url="@Url.Action("Create")" style="max-width: 30px; max-height: 30px; display: inline-block; border: none; background-color: #E7E9EB;"><img style="max-width: 30px; max-height: 30px; display: inline-block" src="~/img/add.png" /></button>
        </div>
        <div class="table inventory" id="inventory" name="inventory">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Demirbaş No</th>
                        <th>Zimmet Durumu</th>
                        <th>Firma</th>
                        <th>Zimmet Tipi</th>
                        <th>Tip Açıklaması</th>
                        <th>Personel</th>
                        <th>Bedel</th>
                        <th>Takma Ad</th>
                        <th>Seri No</th>
                        <th>Marka</th>
                        <th>CPU</th>
                        <th>Ram</th>
                        <th>Ram Slot</th>
                        <th>Disk Tipi</th>
                        <th>Disk Kapasitesi</th>
                        <th>Ekran</th>
                        <th colspan="1" style="text-align:center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Esya item in Model.Esyalar.Where(x=>x.BagliEsyaID==0))
                    {
                       <tr>
                        <td>
                            <button type="button" data-toggle="ajax-modal" data-target="#addItem" data-url="@Url.Action($"Edit/{item.ID}")" style="border:none; background-color:inherit;">@item.DemirbasNo</button>
                        </td>
                            @if (item.EsyaDurumu == Project.ENTITIES.Enums.EsyaDurumu.Zimmetlendi)
                            {
                            <td style="color: green">@item.EsyaDurumu</td>
                            }
                            else if (item.EsyaDurumu == Project.ENTITIES.Enums.EsyaDurumu.ZimmetPlanlandi)
                            {
                            <td style="color: red">@item.EsyaDurumu</td>
                            }
                            else if (item.EsyaDurumu == Project.ENTITIES.Enums.EsyaDurumu.Boşta)
                            {
                            <td>
                                <button type="button" data-toggle="ajax-modal" data-target="#addItem" data-url="@Url.Action($"Debit/{item.ID}")" style="border: none; color: blue; background-color:inherit;">@item.EsyaDurumu</button>
                            </td>
                            }
                            else if (item.EsyaDurumu == Project.ENTITIES.Enums.EsyaDurumu.IadeEdildi)
                            {
                            <td>
                                <button type="button" data-toggle="ajax-modal" data-target="#addItem" data-url="@Url.Action($"Debit/{item.ID}")" style="border: none; color: blue; background-color:inherit; ">Boşta</button>
                            </td>
                            }
                            else
                            {
                            <td>@item.EsyaDurumu</td>
                            }
                            <td>@item.Sirket.SirketAdi</td>
                            <td>@item.ZimmetTip.ZimmetTipi</td>
                            <td>@item.ZimmetTip.Aciklama</td>
                            @if (item.Personel.AdSoyad == "Admin")
                            {
                                <td> </td>
                            }
                            else
                            {
                                <td>@item.Personel.AdSoyad</td>
                            }
                            <td>@item.Bedel</td>
                            <td>@item.TakmaAd</td>
                            <td>@item.SeriNo</td>
                            <td>@item.Marka</td>
                            <td>@item.CPU</td>
                            <td>@item.Ram</td>
                            <td>@item.RamSlot</td>
                            <td>@item.DiskTipi</td>
                            <td>@item.DiskKapasitesi</td>
                            <td>@item.Ekran</td>
                            <td>
                                @Html.ActionLink("İlişkilendirme", "ITPanelIliskiler", new { id = item.ID }, new { @class = "btn btn-warning" })
                            </td>
                        </tr>
                    
                        
                     }
                </tbody>
            </table>
        </div>
    </div>

    <div id="PlaceHolderHere"></div>

}

<script>

    let btn = document.querySelector("#btn");
    let sidebar = document.querySelector(".sidebar");

    btn.onclick = function () {
        sidebar.classList.toggle("active");
    };

    function selectedvalue() {
        e = document.getElementById("zimmetdurumu").value;
    };

    function selectedzimmetvalue() {
        a = document.getElementById("zimmettipi").value;
    };

    $(function () {

        var PlaceHolderElement = $('#PlaceHolderHere');

        $('button[data-toggle="ajax-modal"]').click(function (event) {

            var url = $(this).data('url');
            var decodedUrl = decodeURIComponent(url);

            $.get(decodedUrl).done(function (data) {
                PlaceHolderElement.html(data);
                PlaceHolderElement.find('.modal').modal('show');
            })

        })

        PlaceHolderElement.on('click', '[data-save="modal"]', function (event) {
            var form = $(this).parents('.modal').find('form');
            var actionUrl = form.attr('action');
            var sendData = form.serialize();
            $.post(actionUrl, sendData).done(function (data) {
                PlaceHolderElement.find('.modal').modal('hide');
            })
        })

        @if (Session["AddSuccess"] == null)
        {

        }
        else if (Session["AddSuccess"].ToString() == "success")
        {
            Session["AddSuccess"] = null;

            @:swal("İşlem Başarılı!", "Demirbaş Başarıyla Eklendi!", "success");
        }
        else
        {
            Session["AddSuccess"] = null;

            @:swal("İşlem Başarısız!", "Demirbaş Eklenemedi!", "error");
        }

        @if (Session["EditSuccess"] == null)
        {

        }
        else if (Session["EditSuccess"].ToString() == "success")
        {
            Session["EditSuccess"] = null;

            @:swal("İşlem Başarılı!", "Demirbaş Başarıyla Güncellendi!", "success");
        }
        else
            {
            @:swal("İşlem Başarısız!", "Demirbaş Güncellenemedi!", "error");
            Session["EditSuccess"] = null;
        }

        @if (Session["DebitSuccess"] == null)
        {

        }
        else if (Session["DebitSuccess"].ToString() == "success")
        {
            Session["DebitSuccess"] = null;

            @:swal("İşlem Başarılı!", "Demirbaşın Zimmet Planı Başarıyla Oluşturuldu!", "success");
        }
        else
        {
            Session["DebitSuccess"] = null;
        }
        });

</script>


